<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
        tools:context="br.com.findfer.findfer.ProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <ProgressBar
                android:id="@+id/pb_load_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="gone"
                android:layout_gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10pt"
                android:background="@color/white"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_profile"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                fresco:placeholderImage="@drawable/banana"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_name_user"
                android:layout_marginTop="5dp"
                android:textSize="8pt"
                />
            <TextView
                android:id="@+id/tv_market_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_market_name"
                android:layout_below="@+id/tv_name_user"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:textSize="8pt"/>
            <ProgressBar
                android:id="@+id/pb_load_relationship"
                android:layout_marginRight="10pt"
                android:layout_width="23pt"
                android:layout_height="23pt"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/imb_add_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/request_relationship"
                android:background="@color/white"
                android:layout_marginRight="10pt"
                android:onClick="requestRelation"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imb_add_relationship"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/tv_request_relationship"
                />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/black"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="5pt"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/tv_date_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_date"
                android:textSize="6pt"
                android:layout_marginTop="5dp"
                />

            <RatingBar
                android:id="@+id/rtb_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
