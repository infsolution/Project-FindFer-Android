<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_profile_user"
        android:layout_width="35pt"
        android:layout_height="35pt"
        fresco:placeholderImage="@drawable/profile48"
        app:progressBarImageScaleType="center"
        app:roundAsCircle="true"
        android:layout_marginRight="5pt"
        android:layout_marginLeft="5pt"
        android:layout_marginTop="5pt"
        android:layout_marginBottom="5pt"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_profile_user"
        android:layout_marginTop="5pt"
        android:text="@string/tv_name_user"
        android:textSize="10pt"
        android:layout_marginLeft="5pt"/>
    <TextView
        android:id="@+id/tv_type_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/img_profile_user"
        android:text="@string/tv_type"
        android:textSize="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="5pt"
        android:background="@color/gray2"
        android:layout_below="@+id/img_profile_user"/>


</RelativeLayout>