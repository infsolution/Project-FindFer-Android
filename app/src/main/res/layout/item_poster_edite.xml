<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_poster_edit"
        android:layout_width="35pt"
        android:layout_height="35pt"
        fresco:placeholderImage="@drawable/banana"
        app:progressBarImageScaleType="center"
        android:layout_marginRight="5pt"
        android:layout_marginLeft="5pt"
        android:layout_marginTop="5pt"
        android:layout_marginBottom="5pt"/>
    <TextView
    android:id="@+id/tv_title_edit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/img_poster_edit"
    android:layout_marginTop="5pt"
    android:text="@string/tv_title"
    android:textSize="10pt"
    android:layout_marginLeft="5pt"/>
    <!--Button
        android:id="@+id/bt_edit_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_edit"
        android:layout_toRightOf="@+id/img_poster_edit"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:text="@string/bt_edit"
        />
    <Button
        android:id="@+id/bt_delete_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_edit"
        android:layout_toRightOf="@+id/bt_edit_poster"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:text="@string/bt_delete"
        /-->
    <TextView
        android:id="@+id/tv_edit_informe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_poster_edit"
        android:layout_below="@+id/tv_title_edit"
        android:layout_marginTop="5pt"
        android:text="@string/edit_information"
        android:textSize="5pt"
        android:layout_marginLeft="5pt"

        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="5pt"
        android:background="@color/gray2"
        android:layout_below="@+id/img_poster_edit"/>

</RelativeLayout>