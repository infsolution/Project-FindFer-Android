<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="br.com.findfer.findfer.PosterActivity"
   >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">




    <!--ImageView
        android:id="@+id/img_poster"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/banana"
        android:layout_marginTop="10dp"
        /-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_poster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            fresco:placeholderImage="@drawable/banana"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:text="@string/tv_title"
            android:textStyle="bold"
            />
    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_value"
        android:textSize="8pt"
        android:textStyle="bold"
        android:layout_alignParentRight="true"


        />
</RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="@color/black"
            />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!--ImageButton
        android:id="@+id/imb_profile_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profile48"
        android:layout_alignParentLeft="true"
        android:background="@color/white"
        /-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_profile_poster"
            android:layout_width="50dp"
            android:layout_height="50dp"
            fresco:placeholderImage="@drawable/profile48"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:roundAsCircle="true"
            android:onClick="goProfileMarketer"
            />

        <TextView
        android:id="@+id/tv_name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_profile_poster"
        android:text="@string/tv_name_user"
        android:layout_marginTop="5dp"
        android:textSize="6pt"
        />
        <ImageButton
            android:id="@+id/imbt_request_promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:srcCompat="@mipmap/request_promotion"
            android:background="@color/white"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:onClick="requestPromotionDirect"
            />
        <ProgressBar
            android:id="@+id/pb_load_poster"
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"/>

    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="@color/black"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_market_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_market_name"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:textSize="6pt"/>

    </RelativeLayout>
        <TextView
            android:id="@+id/tv_date_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_date"
            android:textSize="6pt"
            android:layout_marginTop="5dp"
            />
        <TextView
        android:id="@+id/tv_poster_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_poster_description"
        android:textSize="8pt"
        android:layout_marginTop="10dp"
        />
        <RatingBar
            android:id="@+id/rtb_qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:numStars="5"
            android:stepSize="2.0"
            android:rating="2.0"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="@color/black"
            />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/bt_location_market"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_location_market"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:layout_marginRight="1pt"
            android:onClick="goLocationMarket"/>
        <Button
            android:id="@+id/bt_sale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_buy"
            android:background="@color/colorAccent"
            android:layout_marginLeft="1pt"
            android:layout_weight="1"
            android:onClick="toBuy"
            />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
