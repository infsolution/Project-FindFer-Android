<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="br.com.findfer.findfer.PosterActivity"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/white" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_poster"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                fresco:placeholderImage="@drawable/banana" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title_poster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_title"
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/tv_value"
                    android:textSize="8pt"


                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--ImageButton
        android:id="@+id/imb_profile_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profile48"
        android:layout_alignParentLeft="true"
        android:background="@color/white"
        /-->
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_profile_poster"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:onClick="goProfileMarketer"
                    app:roundAsCircle="true"
                    fresco:placeholderImage="@drawable/profile48" />

                <TextView
                    android:id="@+id/tv_name_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/img_profile_poster"
                    android:layout_marginLeft="16dp"
                    android:text="@string/tv_name_user"
                    android:textSize="6pt" />

                <ImageButton
                    android:id="@+id/imbt_request_promotion"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:onClick="requestPromotionDirect"
                    app:srcCompat="@mipmap/request_promotion"
                    android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/pb_load_poster"
                    android:layout_width="15pt"
                    android:layout_height="15pt"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/imbt_request_promotion"
                    android:text="@string/aks_for_discount"
                    android:visibility="gone"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_market_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/tv_market_name"
                    android:textSize="6pt" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_date_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/tv_date"
                android:textSize="6pt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_poster_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/tv_poster_description"
                android:textSize="8pt" />

            <RatingBar
                android:id="@+id/rtb_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="2.0"
                android:stepSize="2.0"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_location_market"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:onClick="goLocationMarket"
                    android:text="@string/bt_location_market"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bt_sale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1pt"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:onClick="toBuy"
                    android:text="@string/bt_buy"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
